{
    "name": "sandfox.dev/all-libs",
    "description": "All my libs metapackage",
    "type": "metapackage",
    "license": "0BSD",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "arokettu/composer-license-manager": true,
            "arokettu/composer-menu": true,
            "arokettu/composer-viz": true
        }
    },
    "minimum-stability": "alpha",
    "require": {
        "arokettu/arithmetic-parser": "*",
        "arokettu/bencode": "*",
        "arokettu/clock": "*",
        "arokettu/composer-license-manager": "*",
        "arokettu/composer-viz": "*",
        "arokettu/console-menu": "*",
        "arokettu/datetime-rounding": "*",
        "arokettu/encryptor": "*",
        "arokettu/is-resource": "*",
        "arokettu/json": "*",
        "arokettu/kilo-mega": "*",
        "arokettu/monsterid": "*",
        "arokettu/path": "*",
        "arokettu/phpstorm-metadata-export": "*",
        "arokettu/private-access": "*",
        "arokettu/pseudolocale": "*",
        "arokettu/random-polyfill": "<1.99",
        "arokettu/system-clock": "*",
        "arokettu/torrent-file": "*",
        "arokettu/torrent-file-cli": "*",
        "arokettu/unsigned": "*",
        "arokettu/uuid": "*",
        "arokettu/uuid-doctrine": "*"
    },
    "require-dev": {
        "symfony/filesystem": ">= 2.0"
    },
    "extra": {
        "arokettu/composer-license-manager": {
            "licenses": {
                "allowed": ["MIT", "MIT-0", "BSD-2-Clause", "BSD-3-Clause", "CC-BY-2.5", "0BSD"]
            },
            "_comment": "Only permissive licenses"
        }
    }
}
