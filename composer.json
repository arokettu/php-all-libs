{
    "name": "arokettu/all-libs",
    "description": "All my libs metapackage",
    "type": "metapackage",
    "license": "MIT-0",
    "authors": [
        {
            "name": "Anton Smirnov",
            "email": "sandfox@sandfox.me"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "arokettu/composer-license-manager": true,
            "arokettu/composer-viz": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "arokettu/composer-license-manager": "*",
        "arokettu/composer-viz": "*",
        "arokettu/console-menu": "*",
        "arokettu/encryptor": "*",
        "arokettu/is-resource": "*",
        "arokettu/json": "*",
        "arokettu/path": "*",
        "arokettu/pseudolocale": "*",
        "sandfoxme/bencode": "*",
        "sandfoxme/monsterid": "*",
        "sandfoxme/phpstorm-metadata-export": "*",
        "sandfoxme/private-access": "*",
        "sandfoxme/torrent-file": "*"
    },
    "require-dev": {
        "symfony/filesystem": ">= 2.0"
    },
    "extra": {
        "arokettu/composer-license-manager": {
            "licenses": {
                "allowed": ["MIT", "BSD-2-Clause", "BSD-3-Clause"]
            },
            "_comment": "Only permissive licenses"
        }
    }
}
